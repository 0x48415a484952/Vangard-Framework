{
    "type": "project",
    "description": "A Powerful Blog System",
    "license": "MIT",
    "require": {
        "php": ">=7.4.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-http": "*"
    },
    "config": {
        "optimize-autoloader": true
    },
    "authors": [{
        "name": "Hazhir Ahmadzadeh",
        "email": "hazhiir1811@gmail.com"
    }],
    "autoload": {
        "files": [
            "Framework/Helper/Helper.php"
        ],
        "psr-4": {
            "Septillion\\Framework\\" : "Framework",
            "Septillion\\App\\" : "App"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Septillion\\Tests\\": "Tests"
        }
    },
    "archive": {
        "exclude": ["vendor", ".DS_Store", "*.log"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
